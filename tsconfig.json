{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "target": "es5",
        "baseUrl": "./",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-native",
        "paths": {
            "app/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
